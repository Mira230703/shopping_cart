antity += 1\r\n    } else {\r\n      cart.value.push({ ...product, quantity: 1 })\r\n    }\r\n  }\r\n\r\n  // âŒ ç§»é™¤å–®ä¸€å•†å“\r\n  function removeFromCart(productId) {\r\n    cart.value = cart.value.filter(item => item.id !== productId)\r\n  }\r\n\r\n  // â¬† å¢åŠ æ•¸é‡\r\n  function increaseQuantity(productId) {\r\n    const item = cart.value.find(i => i.id === productId)\r\n    if (item) item.quantity += 1\r\n  }\r\n\r\n  // â¬‡ æ¸›å°‘æ•¸é‡\r\n  function decreaseQuantity(productId) {\r\n    const item = cart.value.find(i => i.id === productId)\r\n    if (item) {\r\n      item.quantity -= 1\r\n      if (item.quantity <= 0) removeFromCart(productId)\r\n    }\r\n  }\r\n\r\n  // ğŸ§¹ æ¸…ç©ºè³¼ç‰©è»Š\r\n  function clearCart() {\r\n    cart.value = []\r\n  }\r\n\r\n  return {\r\n    cart,\r\n    addToCart,\r\n    removeFromCart,\r\n    increaseQuantity,\r\n    decreaseQuantity,\r\n    clearCart\r\n  }\r\n}\r\n","<template>\r\n  <header class=\"flex items-center justify-between px-6 py-4 bg-white shadow\">\r\n    <h1 class=\"text-xl font-bold\">ğŸ›ï¸ å•†å“å•†åŸ</h1>\r\n\r\n    <div class=\"flex gap-4 items-center\">\r\n      <!-- æœå°‹æ¡† -->\r\n      <input\r\n        id=\"search\"\r\n        v-model=\"model\"\r\n        type=\"text\"\r\n        placeholder=\"æœå°‹å•†å“...\"\r\n        aria-label=\"æœå°‹å•†å“\"\r\n        class=\"border rounded px-3 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-[#b9a2a6]\"\r\n      />\r\n\r\n      <!-- è³¼ç‰©è»ŠæŒ‰éˆ• -->\r\n      <button\r\n        class=\"btn-search relative\"\r\n        @click=\"$emit('toggle-cart')\"\r\n        aria-label=\"é–‹å•Ÿè³¼ç‰©è»Š\"\r\n      >\r\n        ğŸ›’\r\n        <span class=\"badge-count\" v-if=\"cartCount > 0\">\r\n          {{ cartCount }}\r\n        </span>\r\n      </button>\r\n    </div>\r\n  </header>\r\n</template>\r\n\r\n<script setup>\r\nimport { computed } from 'vue'\r\n\r\ndefineOptions({ inheritAttrs: false })\r\n\r\nconst props = defineProps({\r\n  modelValue: { type: String, default: '' },\r\n  cartCount: { type: Number, default: 0 }\r\n})\r\n\r\nconst emit = defineEmits(['update:modelValue', 'toggle-cart'])\r\n\r\nconst model = computed({\r\n  get: () => props.modelValue,\r\n  set: val => emit('update:modelValue', val)\r\n})\r\n</script>\r\n","<template>\r\n  <transition name=\"slide\">\r\n    <aside\r\n      v-if=\"show\"\r\n      class=\"cart-drawer fixed top-0 right-0 w-80 h-full bg-white shadow-lg p-6 overflow-y-auto z-50\"\r\n    >\r\n      <!-- Header -->\r\n      <div class=\"flex justify-between items-center mb-4\">\r\n        <h2 class=\"text-lg font-bold\">ğŸ›’ è³¼ç‰©è»Š</h2>\r\n        <button\r\n          @click=\"$emit('close')\"\r\n          class=\"text-stone-500 hover:text-stone-700\"\r\n          aria-label=\"é—œé–‰è³¼ç‰©è»Š\"\r\n        >\r\n          âœ–\r\n        </button>\r\n      </div>\r\n\r\n      <!-- Cart Items -->\r\n      <ul v-if=\"cart.length\" class=\"space-y-3\">\r\n        <li\r\n          v-for=\"item in cart\"\r\n          :key=\"item.id\"\r\n          class=\"flex justify-between items-center border-b pb-2\"\r\n        >\r\n          <div>\r\n            <p class=\"font-semibold\">{{ item.name }}</p>\r\n            <p class=\"text-sm text-stone-600\">\r\n              {{ formatPrice(item.price) }} Ã— {{ item.quantity }}\r\n            </p>\r\n          </div>\r\n          <div class=\"flex items-center gap-2\">\r\n            <button\r\n              @click=\"$emit('decrease', item.id)\"\r\n              aria-label=\"æ¸›å°‘æ•¸é‡\"\r\n              class=\"px-2 py-1 border rounded hover:bg-gray-100\"\r\n            >\r\n              â–\r\n            </button>\r\n            <span>{{ item.quantity }}</span>\r\n            <button\r\n              @click=\"$emit('increase', item.id)\"\r\n              aria-label=\"å¢åŠ æ•¸é‡\"\r\n              class=\"px-2 py-1 border rounded hover:bg-gray-100\"\r\n            >\r\n              â•\r\n            </button>\r\n          </div>\r\n        </li>\r\n  